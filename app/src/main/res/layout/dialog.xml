<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/pokeballs20"
        android:id="@+id/dialogPic"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="itemName"
        android:textSize="18dp"
        android:id="@+id/dialogName"
        android:layout_below="@+id/dialogPic"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/dialogDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogName"
        android:layout_centerHorizontal="true"
        android:text="itemDesc"
        />

    <LinearLayout
        android:id="@+id/price_layout"
        android:layout_below="@+id/dialogDesc"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e5f4df"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/image_coins"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/pokecoin"

            />

        <TextView
            android:id="@+id/dialogPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="22dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</RelativeLayout>